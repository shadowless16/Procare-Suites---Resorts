{
  "name": "procare-suites/procare-backend",
  "description": "Backend for Procare Suites & Resorts website handling bookings and data management.",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.0",
    "monolog/monolog": "^2.0",
    "doctrine/orm": "^2.9",
    "doctrine/dbal": "^3.0",
    "phpmailer/phpmailer": "^6.10"
  },
  "autoload": {
    "psr-4": {
      "Src\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
